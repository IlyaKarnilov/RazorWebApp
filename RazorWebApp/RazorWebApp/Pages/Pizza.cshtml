@page
@using RazorWebApp.Models
@model RazorWebApp.Pages.Pizza

@{
}
<div class="text-center">
    <div class="mainSubtitle">
        <h1 class="display-4 text-black text-capitalize ">Our great selection of pizza</h1>
        <h5 class="text-black fw-bold">Choose one or try Pizza Builder! Then order and done!</h5>
        <h5 class="text-black fw-bold">No need to give any of your details!</h5>
        <h5 class="text-black fw-bold">We alredy know everything!</h5>
        <p class="text-end text-muted fs-6"><i>only one pizza in order.</i></p>
    </div>
    <br/>
    <div class="container ">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="images/Pizzas/Create.png" class="w-100">
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own pizza</h3>
                            <p style="text-align: left;">make your own pizza with us</p>
                            <a class="btn btn-primary" style="float: left ; " asp-area="" asp-page="/Forms/CustomPizza"> try now </a>
                        </div>
                    </div>
                </div>
            </div>
        
        
        @foreach (var pizza in Model.PizzaDB)
        {
            var image = "images/Pizzas/" + pizza.ImageTitle+".png";
            <div class="col-4 mb-5">
                <img src="@image" class="w-100" asp-append-version="true" alt="..."/>
                <a class="btn btn-primary" style="float: top; margin: 10px" asp-area="" asp-page="/Checkout/Checkout"
                   asp-route-PizzaImage="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.BasePrice">@pizza.PizzaName !! try now </a>
                <br/>
            </div>
        }
        </div>
    </div>
</div>
